# Kubernetes Secret template for Ledger Bot
#
# IMPORTANT: Do NOT commit actual secrets to git!
# This is a template. Create the actual secret using:
#   kubectl create secret generic ledger-bot-secrets \
#     --from-literal=slack-bot-token=xoxb-... \
#     --from-literal=slack-app-token=xapp-... \
#     --from-literal=litellm-developer-key=sk-... \
#     -n bor-write
#
# Or use your company's secret management tool (e.g., Vault, Sealed Secrets)

apiVersion: v1
kind: Secret
metadata:
  name: ledger-bot-secrets
  namespace: bor-write
  labels:
    app: ledger-bot
type: Opaque
data:
  # Base64-encoded values (use: echo -n 'value' | base64)
  slack-bot-token: <BASE64_ENCODED_SLACK_BOT_TOKEN>
  slack-app-token: <BASE64_ENCODED_SLACK_APP_TOKEN>
  litellm-developer-key: <BASE64_ENCODED_LITELLM_KEY>
